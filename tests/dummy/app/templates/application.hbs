{{! template-lint-disable }}
<h2>Ember Flowplayer Audio</h2>

<ul>
    <li>isLive: {{ emberFlowplayer.player.live }}</li>
    <li>isPlaying: {{ emberFlowplayer.isPlaying }}</li>
    <li>Audio duration: {{emberFlowplayer.duration}}</li>
    <li>Audio Current Time: {{emberFlowplayer.currentTime}}</li>
    <li>Audio Volume: {{emberFlowplayer.player.volumeLevel}}</li>

</ul>
<EmberFlowplayer
    @source="https://cdn.rasset.ie/manifest/audio/2019/0404/20190404_rteradio1-bitesize-theryantub_c21535005_21535006_261_/manifest.m3u8" />
<div class="grid-container rte-radioplayer">
    <audio-player aria-label="Audio Player" id="ember89" class="ember-view">
        <div class="rte-radioplayer">
            <div class="grid-x">
                <div class="small-3 medium-2 cell">
                    {{#if emberFlowplayer.isPlaying}}
                        <button tabindex="1" id="pause"
                            class="button transparent playButton {{safe-string player.nowPlaying.lastObject.stationClass}}"
                            {{action "togglePlayer" "pause"}} label="Pause">
                            <i class="icon-RP-Webfont_Pause"></i>
                        </button>
                    {{else}}
                        <button tabindex="1" id="play"
                            class="button transparent playButton {{safe-string player.nowPlaying.lastObject.stationClass}}"
                            {{action "togglePlayer" "play"}} label="Play">
                            <i class="icon-RP-Webfont_Play"></i>
                        </button>
                    {{/if}}
                </div>
                <div class="small-7 medium-8 cell">
                    <a href="#/radio1/11033283" id="ember859" class="active ember-view">
                        <h4 class="hoverUl">
                            Mooney Goes Wild</h4>
                    </a>
                    {{#if emberFlowplayer.changeSrc}}
                        Loading
                    {{else}}
                        {{#if emberFlowplayer.duration}}
                            <EmberFlowplayerRange @max={{emberFlowplayer.duration}} @min=0
                                @value={{emberFlowplayer.currentTime}} />
                        {{/if}}
                    {{/if}}



                    <div class="duration_information">
                        <NumeralFormat @duration={{emberFlowplayer.currentTime}} />
                        {{#if player.isLive}}
                            <NumeralFormat @duration={{ player.nowPlaying.lastObject.duration }} class="float-right" />
                            {{timeLeft}}
                        {{else}}
                            <NumeralFormat @duration={{emberFlowplayer.duration}} class="float-right" />
                        {{/if}}
                    </div>

                </div>
                <div class="small-2 medium-1  cell volume-cell">
                    <button class="mute float-right transparent" {{action "mute"}}>
                        <i class="icon-RP-Webfont_Volume"></i>
                    </button>
                </div>
                <div class="medium-1 hide-for-small-only cell">
                    <div class="volume">
                        <EmberFlowplayerVolumerange @value=1 />
                    </div>

                </div>
            </div>

        </div>
    </audio-player>
</div>
<EmberFlowplayerChangeSource
    @source="https://cdn.rasset.ie/manifest/audio/2019/0506/20190506_rteradio1-colmoregan_cl11033668_11035945_261_/manifest.m3u8" />
{{outlet}}