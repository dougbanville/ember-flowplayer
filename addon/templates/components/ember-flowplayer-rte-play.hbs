{{#if pillButton}}
    {{#if isPlaying}}
        <EmberFlowplayerPillButton onclick={{action "pause" model}}><i class="icon-RP-Webfont_Pause"></i>Pause
        </EmberFlowplayerPillButton>
    {{else}}
        <EmberFlowplayerPillButton onclick={{action "play" model}}><i class="icon-RP-Webfont_Play"></i>{{yield}}
        </EmberFlowplayerPillButton>
    {{/if}}
{{else}}
    {{#if isPlaying}}
        <EmberFlowplayerRoundButton class="circular_button button {{safe-string stationClass}} mobile_list_button"
            onclick={{action "pause" model}}>
            <i class=" icon-RP-Webfont_Pause"></i>
        </EmberFlowplayerRoundButton>
    {{else}}
        <EmberFlowplayerRoundButton class="circular_button button {{safe-string stationClass}} mobile_list_button"
            onclick={{action "play" model}}>
            <i class="icon-RP-Webfont_Play"></i>
        </EmberFlowplayerRoundButton>
    {{/if}}
{{/if}}