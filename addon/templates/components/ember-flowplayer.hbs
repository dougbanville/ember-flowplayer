<h1>FLOWPLAYER : {{emberFlowemberFlowplayer.status}} {{emberFlowemberFlowplayer.currentTime}}</h1>






<div class="rte-radioplayer">
    <div class="grid-x">
        <div class="small-3 medium-2 cell">
            {{#if emberFlowplayer.isPlaying}}
            <button tabindex="1" id="pause" class="button transparent playButton {{safe-string emberFlowplayer.nowPlaying.lastObject.stationClass}}" {{action "togglePlayer" "pause"}} label="Pause">
                <i class="icon-RP-Webfont_Pause"></i>
            </button>
            {{else}}
            <button tabindex="1" id="play" class="button transparent playButton {{safe-string emberFlowplayer.nowPlaying.lastObject.stationClass}}" {{action "togglePlayer" "play"}} label="Play">
                <i class="icon-RP-Webfont_Play"></i>
            </button>
            {{/if}}
        </div>
        <div class="small-7 medium-8 cell">
            {{#if live}}
                {{#link-to "station.index" emberFlowplayer.nowPlaying.lastObject.stationSlug}}
                        <h4>{{{emberFlowplayer.nowPlaying.lastObject.title}}}</h4>
                {{/link-to}}
            {{else}}
                {{#link-to "station.playback" emberFlowplayer.nowPlaying.lastObject.stationSlug emberFlowplayer.nowPlaying.lastObject.itemid}}
                <h4>{{{emberFlowplayer.nowPlaying.lastObject.title}}}</h4>
                {{/link-to}}
            {{/if}}

            <div id="ember-flowplayer" class="fp-playful fp-edgy"></div>
            {{#if live}}
                    Live slide
            {{else}}
                    Playback slide
            {{/if}}
            <div class="duration_information">
                {{!format-duration emberFlowplayer.currentTime}} {{formattedPlayerCurrentTime}}
                {{#if live}}
                <span class="float-right">{{!format-duration emberFlowplayer.nowPlaying.lastObject.duration}} {{formattedPlayerDuration}}</span> 
                {{timeLeft}}
                {{else}}
                <span class="float-right">{{!format-duration emberFlowplayer.audioDuration}} {{formattedPlayerDuration}}</span>
                {{/if}}
            </div>
            {{#if emberFlowplayer.isBuffering}}
            <div>Loading audio ....</div>{{/if}}



        </div>
        <div class="small-2 medium-1  cell volume-cell">
            {{#if isMuted}}
            <button class="mute float-right transparent {{ safe-string emberFlowplayer.nowPlaying.lastObject.stationClass }}" {{action "mute" "mute"}}>
               <i class="icon-RP-Webfont_Volume"></i>
            </button>
            {{else}}
            <button class="mute float-right transparent" {{action "mute" "mute"}}>
               <i class="icon-RP-Webfont_Volume"></i>
            </button>
            {{/if}}
        </div>
        <div class="medium-1 hide-for-small-only cell">
            <div class="volume">
                volume
            </div>

        </div>
    </div>

</div>

{{yield}}